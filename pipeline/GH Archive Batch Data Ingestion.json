{
	"name": "GH Archive Batch Data Ingestion",
	"properties": {
		"activities": [
			{
				"name": "For Each Hour",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@range(0, 1)",
						"type": "Expression"
					},
					"isSequential": false,
					"activities": [
						{
							"name": "Copy Data From GH Archive",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "JsonSource",
									"storeSettings": {
										"type": "HttpReadSettings",
										"requestMethod": "GET"
									},
									"formatSettings": {
										"type": "JsonReadSettings"
									}
								},
								"sink": {
									"type": "JsonSink",
									"storeSettings": {
										"type": "AzureBlobStorageWriteSettings"
									},
									"formatSettings": {
										"type": "JsonWriteSettings"
									}
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "gh_archive_dataset",
									"type": "DatasetReference",
									"parameters": {
										"year": {
											"value": "@pipeline().parameters.year",
											"type": "Expression"
										},
										"month": {
											"value": "@pipeline().parameters.month",
											"type": "Expression"
										},
										"day": {
											"value": "@pipeline().parameters.day",
											"type": "Expression"
										},
										"hour": {
											"value": "@{item()}",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "gh_archive_dataset_sink",
									"type": "DatasetReference"
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"year": {
				"type": "string",
				"defaultValue": "2024"
			},
			"month": {
				"type": "string",
				"defaultValue": "03"
			},
			"day": {
				"type": "string",
				"defaultValue": "02"
			}
		},
		"annotations": []
	}
}